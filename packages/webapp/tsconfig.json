{
  "extends": "./tsconfig.webapp.json",
  "include": [
    "./remix.env.d.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./app/**/*.js",
    "./app/**/*.jsx"
  ],
  "exclude": [
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx"
  ],
  // Ignore any reference errors here. It works just fine.
  // Adding composite: true leads to: https://github.com/microsoft/TypeScript/issues/49844
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
